# Environment variables template - Copy to env.yaml and fill in actual values
OPENAI_API_KEY: "your-openai-api-key-here"
GOOGLE_APPLICATION_CREDENTIALS: "./firebase-key.json"
REDIS_HOST: "your-redis-host-ip"
REDIS_PORT: "6379"
REDIS_CLUSTER_MODE: "true"
ALLOYDB_HOST: "your-alloydb-host-ip"
ALLOYDB_PORT: "5432"
ALLOYDB_USER: "your-database-user"
ALLOYDB_PASSWORD: "your-database-password"
ALLOYDB_DATABASE: "postgres"
API_URL: "https://your-api-url.com"

# GCP PROJECT CONFIGURATION
GOOGLE_CLOUD_PROJECT: "your-project-id"
GCP_PROJECT: "your-project-id"

PINECONE_API_KEY: "your-pinecone-api-key"

# PINECONE CONFIGURATION
PINECONE_ENVIRONMENT: "your-pinecone-environment"
PINECONE_INDEX: "your-pinecone-index"
PINECONE_INSIGHTS_INDEX: "your-insights-index"

# Embedding Model
EMBEDDING_MODEL: "text-embedding-3-large"

# FIREBASE CONFIGURATION
FIREBASE_API_KEY: "your-firebase-api-key"
FIREBASE_AUTH_DOMAIN: "your-project.firebaseapp.com"
FIREBASE_PROJECT_ID: "your-project-id"
FIREBASE_STORAGE_BUCKET: "your-project.firebasestorage.app"
FIREBASE_MESSAGING_SENDER_ID: "your-sender-id"
FIREBASE_APP_ID: "your-app-id"

# FIREBASE COLLECTIONS
USER_ASSISTANTS_COLLECTION: "sys_user_assistants"

# METRICS CONFIGURATION
ENABLE_METRICS: "true" 